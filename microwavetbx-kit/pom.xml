            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.microwavetbx</groupId>
            <artifactId>sar-op-analysis-ui</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.microwavetbx</groupId>
            <artifactId>sar-op-calibration</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.microwavetbx</groupId>
            <artifactId>sar-op-calibration-ui</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.microwavetbx</groupId>
